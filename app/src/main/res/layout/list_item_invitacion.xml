<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="vertical"
    android:background="@drawable/list_item_selector" >

    <ImageView
        android:id="@+id/icon_invitation"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_user"
        android:background="@android:color/transparent"
        android:contentDescription="@string/user_icon_description" />

    <TextView
        android:id="@+id/title_invitation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icon_invitation"
        android:singleLine="true"
        android:ellipsize="end"
        style="@style/PrimaryTextItemDoubleLine"/>

    <TextView
        android:id="@+id/subtitle_invitation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icon_invitation"
        android:layout_below="@id/title_invitation"
        android:singleLine="true"
        android:ellipsize="end"
        style="@style/SecondaryTextItemDoubleLine"/>

</RelativeLayout>
