<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cojisoft.roommates" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- Groceries directory -->
        <activity
            android:name=".GroceriesActivity"
            android:label="@string/navdrawer_item_groceries" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Bills directory -->
        <activity
            android:name=".BillsActivity"
            android:label="@string/navdrawer_item_bills" />

        <!-- Task directory -->
        <activity
            android:name=".TasksActivity"
            android:label="@string/navdrawer_item_tasks" />

        <!-- Roommates directory -->
        <activity
            android:name=".RoommatesActivity"
            android:label="@string/navdrawer_item_roommates" />

        <!-- New directory -->
        <activity
            android:name=".NewActivity"
            android:label="@string/navdrawer_item_roommates" />
        <activity
            android:name=".prueba_activity"
            android:label="@string/title_activity_prueba_activity" >
        </activity>
    </application>

</manifest>
